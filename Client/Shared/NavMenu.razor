<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        @if (isAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logs">
                    <span class="oi oi-terminal" aria-hidden="true"></span> Check logs
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="transfersView">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> View transfer history
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="makeTransfer">
                <span class="oi oi-arrow-thick-right" aria-hidden="true"></span> Make new transfer
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="details">
                <span class="oi oi-document" aria-hidden="true"></span> Show details
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isAdmin = false;

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
